{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "removeComments": true,

    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],

    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,

    "sourceMap": true,
    "strict": true,
    "noEmit": true,

    "types": [
      "jest",
      "node"
    ],

    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "src"
  ],

  "exclude": [
    "node_modules"
  ]
}
